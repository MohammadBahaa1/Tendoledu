<div class="container" style="margin-top: 25px">
    <% include ./partials/messages %>
</div>



<div style="background-color: var(--white); padding: 50px 0;">
    <div class="container">
        <!-- --------------------------- Crash Course --------------------------- -->
        <span class="mt-2"
            style="font-size: 1.75rem; border-bottom: 2px solid var(--green); background-color: white; padding: 15px 15px; display: inline-block;">
            Crash Course</span>
        <br><br><br>


        <!-- If Student Work as a Copy Writer -->
        <h3><%= user.user_type.student.workAs %> : </h3>
        <br>

        <div class="card card-body shadow">
            <table class="table table-striped">
                <tbody>
                    <% users.forEach( function(mentor) { %>
                    <% if(mentor.user_type_name === "mentor") { %>
                    <% mentor.user_type.mentor.project_crash_course.forEach(function (course){ %>
                    <% if(course.crash_course_type === user.user_type.student.workAs){ %>
                    <tr>
                        <td>
                            <h6 style="display: inline-block; margin-right: 15px">
                                <%= course.crash_course_name %></h6>
                        </td>
                        <td><a href="<%= course.crash_course_link %>" style="display: inline-block">
                                <h6><%= course.crash_course_link %></h6>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                    <% }); %>
                    <% } %>
                    <% }); %>
                </tbody>
            </table>
        </div>


        <br><br><br>

        <br><br>
    </div>
</div>

<div class="footer">
    <p style="color: white; text-align: center">&copy; 2019 Tendoledu</p>
</div>