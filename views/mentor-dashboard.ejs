<!-- ---------------------------- WORK-SPACE ----------------------------- -->
<div class="container" style="margin-top: 25px">
    <% include ./partials/messages %>
</div>

<div style="padding: 25px 0 100px 0; margin: 25px">

    <div class="container" style="padding: 0 0 50px 0">
        <h1 class="mt-4"
            style="background-color: white; padding: 25px 0px; display: inline-block; border-bottom: 3px solid var(--google-blue)">
            Workspace</h1>
        <p class="lead mb-3" style="display: inline-block; opacity: 0.7; margin-left: 25px">Welcome
            <%= user.name %> !</p>
    </div>





    <!-- ------------------- Workspace Details --------------------- -->
    <div class="wrap-collabsible container">
        <input id="workspace-collapsible" class="toggle" type="checkbox">
        <label for="workspace-collapsible" class="lbl-toggle">
            <h5 style="display: inline-block; padding: 15px 0">Workspace Details</h5>
            <i class="fas fa-info-circle fa-2x" style="margin-left: 15px"></i>
        </label>
        <div class="collapsible-content">
            <!-- edit Not Accepted (What you are going to do) -->
            <div class="jumbotron shadow">
                <form class="form-group" action="/users/edit-notaccepted-project-details" method="POST">
                    <label for="userNotAcceptedProjectDetails">What you're going to do here: (This is for not applied
                        students)</label>

                    <textarea style="background-color: white" class="form-control" id="userNotAcceptedProjectDetails"
                        name="userNotAcceptedProjectDetails"
                        rows="10"> <%= user.user_type.mentor.project_notaccepted_details %> </textarea>

                    <br>
                    <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                            class="fas fa-pencil-alt"></i>Apply
                        Changes</button>
                </form>
            </div>
            <!-- edit Accepted (Workspace Description) -->
            <div class="jumbotron shadow">
                <form class="form-group" action="/users/edit-accepted-project-details" method="POST">
                    <label for="userAcceptedProjectDetails">Workspace Description: (This is for accepted
                        students)</label>

                    <textarea style="background-color: white" class="form-control" id="userNotAcceptedProjectDetails"
                        name="userAcceptedProjectDetails"
                        rows="10"> <%= user.user_type.mentor.project_accepted_details %> </textarea>

                    <br>
                    <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                            class="fas fa-pencil-alt"></i>Apply
                        Changes</button>
                </form>
            </div>
        </div>
    </div>





    <!-- ------------------- Project --------------------- -->
    <div class="wrap-collabsible container">
        <input id="details-collapsible" class="toggle" type="checkbox">
        <label for="details-collapsible" class="lbl-toggle">
            <h5 style="display: inline-block; padding: 15px 0">Project Details</h5>
            <i class="fas fa-info-circle fa-2x" style="margin-left: 15px"></i>
        </label>
        <div class="collapsible-content">
            <!-- edit project name -->
            <div class="jumbotron shadow" style="box-shadow: 0px 0px 25px -10px var(--dark-grey)">
                <form class="form-group" action="/users/edit-project-name" method="POST">
                    <label for="userProjectName">Project Name:</label>
                    <input style="width: 25vw" class="form-control" name="userProjectName" id="userProjectName"
                        value="<%= user.user_type.mentor.project_name %>">
                    <br>
                    <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                            class="fas fa-pencil-alt"></i>Apply
                        Changes</button>
                </form>
            </div>

            <!-- edit project details -->
            <div class="jumbotron shadow">
                <form class="form-group" action="/users/edit-project-details" method="POST">
                    <label for="userProjectDetails">Project Details:</label>

                    <textarea style="background-color: white;" class="form-control" id="userProjectDetails"
                        name="userProjectDetails" rows="10"> <%= user.user_type.mentor.project_details %> </textarea>
                    <br>
                    <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                            class="fas fa-pencil-alt"></i>Apply
                        Changes</button>
                </form>
            </div>
        </div>
    </div>

</div>









<!-- ------------------- Team --------------------- -->
<div style="background-image: linear-gradient(to right, #0acffe 0%, #495aff 100%); padding: 50px 0;">

    <div class="container shadow">
        <span class="mt-2"
            style="font-size: 2.5rem; border-bottom: 2px solid var(--white); color: white; padding: 15px 15px; display: inline-block;">
            Team</span>
        <p style="display: inline-block; color: white; font-size: 1.1rem; margin-left: 25px">View
            team details.</p>


        <div class="table-responsive">
            <table class="table table-striped table-hover" style="max-width: 100%; margin-top: 0px; background-color: white;
           border-radius: 15px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">
                            <h5>Name</h5>
                        </th>
                        <th scope="col">
                            <h5>Email</h5>
                        </th>
                        <th scope="col">
                            <h5>Occupation</h5>
                        </th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% var total_num = 0; %>
                        <% var notAccepted_num = 0; %>
                        <% var accepted_num = 0; %>

                        <% users.forEach( function(user) { %>
                        <% if(user.user_type_name === "student") { %>
                        <% total_num++ %>
                        <th scope="row"><%= total_num %></th>
                        <td>
                            <!-- One Student -->

                            <!-- student name + Accepted/NotAccepted -->
                            <h5 style="display: inline-block"><%= user.name %></h5>

                        </td>
                        <td> <%= user.email %> </td>
                        <td> <%= user.user_type.student.workAs %> </td>
                        <td>
                            <!-- Accept Not Accepted Students -->
                            <% if(!user.user_type.student.accepted){ %>
                            <% notAccepted_num++; %>
                            <form style="display: inline; margin: 0px 15px" action="/users/accept-student"
                                method="POST">
                                <input type="hidden" name="userId" id="userId" value="<%= user.id %>">
                                <button type="submit"
                                    class="gradient-button btn btn-primary btn-inline-block">Accept</button>
                            </form>
                            <% } else { %>
                            <button type="submit" class="gradient-button btn btn-primary btn-inline-block"
                                style="margin: 0px 15px" disabled>Accepted !</button>
                            <% accepted_num++; %>
                            <% } %>
                        </td>
                        <td>
                            <!-- delete student button -->
                            <form style="display: inline; margin: 0px 15px" action="/users/delete-student"
                                method="POST">
                                <input type="hidden" name="userId" id="userId" value="<%= user.id %>">
                                <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                                        class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                        <td>
                            <!-- Contact Student -->
                            <a href="mailto:" class="gradient-button btn btn-primary"><i
                                    class="fas fa-envelope"></i></a>
                            <div class="modal fade" id="contact" tabindex="-1" role="dialog"
                                aria-labelledby="contactLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="contactLabel">New message</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="student-email" class="col-form-label">Student Email:</label>
                                                <input type="text" class="form-control" id="student-email">
                                            </div>
                                            <div class="form-group">
                                                <label for="message-text" class="col-form-label">Message:</label>
                                                <textarea class="form-control" id="message-text"></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Send message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                    <% }); %>
                    <h3
                        style="margin: 25px 25px; border: 2px solid var(--white); border-radius: 100%; float:right; padding: 17px 15px; color: var(--white);">
                        <%= accepted_num + "/" + total_num %>
                    </h3>

                </tbody>
            </table>
        </div>


        <br>
    </div>
</div>



