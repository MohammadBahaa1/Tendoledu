<!-- ------------------- Pre Requisites --------------------- -->
<div style="background-color: var(--white); padding: 50px 0;">
    <div class="container">
        <span class="mt-2"
            style="margin: 15px 0px; font-size: 1.75rem; border-bottom: 2px solid var(--green); background-color: white; padding: 15px 15px; display: inline-block;">
            Pre-Requisites</span>
        <br><br><br>
        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow">
                <tbody>
                    <!-- If Student Work as a Copy Writer -->
                    <h3 style="display: inline-block; margin-right: 25px">Copy Writer : </h3>
                    <a data-toggle="modal" data-pre_type="Copy Writer" title="Add this item"
                        class="open-AddPreReq gradient-button btn btn-primary" href="#addPreReq">Add Skill</a>
                    <br><br>
                    <h5>(Write Website Sales & Marketing Content)</h5>
                    <br><br>
                    <% var total_num = 0; %>
                    <% user.user_type.mentor.project_pre.forEach(function (course){ %>
                    <% if(course.pre_type === "Copy Writer"){ %>
                    <% total_num++ %>
                    <tr>
                        <th scope="row"><%= total_num %></th>
                        <td>
                            <h6 style="display: inline-block; margin-right: 15px"><%= course.pre_name %></h6>
                        </td>
                        <td><a href="<%= course.pre_link %>" style="display: inline-block">
                                <h6><%= course.pre_link %></h6>
                            </a>
                        </td>
                        <td>
                            <form style="display: inline; margin: 0px 15px" action="/users/delete-pre-course"
                                method="POST">
                                <input type="hidden" name="courseId" id="courseId" value="<%= course.id %>">
                                <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                                        class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <br><br>
        <hr style="border-color: var(--green)">
        <br><br>

        <!-- If Student Work as a Graphic Designer -->
        <div class="table-responsive">
            <table class="table table-striped shadow">
                <tbody>
                    <!-- If Student Work as a Graphic Designer -->
                    <h3 style="display: inline-block; margin-right: 25px">Graphic Designer : </h3>
                    <a data-toggle="modal" data-pre_type="Graphic Designer" title="Add this item"
                        class="open-AddPreReq gradient-button btn btn-primary" href="#addPreReq">Add Skill</a>
                    <br><br>

                    <% var total_num = 0; %>
                    <% user.user_type.mentor.project_pre.forEach(function (course){ %>
                    <% if(course.pre_type === "Graphic Designer"){ %>
                    <% total_num++ %>
