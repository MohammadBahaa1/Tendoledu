                        <th scope="row"><%= total_num %></th>
                        <td>
                            <h6 style="display: inline-block; margin-right: 15px"><%= course.pre_name %></h6>
                        </td>
                        <td><a href="<%= course.pre_link %>" style="display: inline-block">
                                <h6><%= course.pre_link %></h6>
                            </a>
                        </td>
                        <td>
                            <form style="display: inline; margin: 0px 15px" action="/users/delete-pre-course"
                                method="POST">
                                <input type="hidden" name="courseId" id="courseId" value="<%= course.id %>">
                                <button type="submit" class="gradient-button btn btn-primary btn-inline"><i
                                        class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <br><br>
        <hr style="border-color: var(--green)">
        <br><br>

        <!-- If Student Work as a Marketing Content Creator -->
        <div class="table-responsive">
            <table class="table table-striped shadow">
                <tbody>
                    <!-- If Student Work as a Marketing Content Creator -->
                    <h3 style="display: inline-block; margin-right: 25px">Marketing Content Creator : </h3>
                    <a data-toggle="modal" data-pre_type="Marketing Content Creator" title="Add this item"
                        class="open-AddPreReq gradient-button btn btn-primary" href="#addPreReq">Add Skill</a>
                    <br><br>
                    <% var total_num = 0; %>
